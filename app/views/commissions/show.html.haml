-#    .item_holder
- unless request.xhr?
  - if @commission.is_uik
    %h1
      = @commission.name
      %a.ico-link.sprite-link{:href=>@commission.url}
    %table
      %tr
        - @commission.votings.each do |vote|
          - if vote.main_role?
            %td{"title"=>vote.name}
              = vote.votes
  - else
    %div.navigation-holder
      %a.show-navigation{:href=>"#"}
        = @commission.name
      = link_to "ЦИК", root_path  
      %div.tree-navigation
        %br
    - @commission.subtree.each do |child|
      - unless child.is_uik
        %div.tree-node-holder{"id" => child.id, "class" => "depth-#{child.depth}"}
          %div.node-name
            %div.name
              %h3{"id"=>child.id,"data-depth"=>child.depth}
                = child.name
                %a.ico-link.sprite-link{:href=>child.url}
            .clearfix
          - if child.uik_holder
            %div.votings{"data-id"=>child.id, "data-loaded"=>"false", "data-url"=>"/uik/#{child.id}"}  
              %div.loading
                = image_tag('ajax-loader.gif')
- else
  %table.voting-table
    - @commission.children.each do |child|
      %tr
        %td
          %a{:href => commission_path(child.id)}
            = child.name
          - child.votings.each do |vote|
            - if vote.main_role?
              %td{"title"=>vote.name}
                = vote.votes


