- unless request.xhr?
  - if @commission.is_uik

    %div.navigation-holder
      %a.uik-navigation{:href => '/'}
        = 'Регионы'
      &nbsp;→&nbsp;
      - @commission.ancestors.each do |c|
        %a.uik-navigation{:href => commission_path(c.id)}
          = c.name
        &nbsp;→&nbsp;
    %h1
      = @commission.name
      %a.ico-link.sprite-link{:href=>@commission.url}
    %table
      - @protocols.each do |p|
        - if p == @protocols.first
          %tr
            %td
              %a{:href=>@commission.url}
                ЦИК
            - p.votings.each do |vote|
              %td{"title"=>vote.name}
                = vote.votes
        - else
          %tr
            %td
              %a{:href => commission_protocol_path(@commission.id, p.id), :class => (if p.conflict then "red" else "green" end)}
                = 'КАРИК №' + p.id.to_s
            - p.votings.each do |vote|
              %td{"title"=>vote.name, :class => vote_class(p, vote.voting_dictionary_id)}
                = vote.votes
          %tr
            %td{:colspan => p.votings.count+1}
              #pictures
                - p.pictures.each do |pic|
                  .picture[pic]
                    %a{:href => pic.image_url}
                      = image_tag pic.image_url(:thumb) if pic.image?
    %a{:href => new_commission_protocol_path(@commission.id)}
      Загрузить новый протокол
    %br
    %br
    %div#disqus_thread
    %script(type="text/javascript")
      - if ENV['RAILS_ENV'] == 'production'
        var disqus_shortname = 'nk12'; // required: replace example with your forum shortname
      - else
        var disqus_shortname = 'example'; // required: replace example with your forum shortname
      :plain

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
  - else

    %div.navigation-holder
      %a.uik-navigation{:href => '/'}
        = 'Регионы'
      &nbsp;→&nbsp;
      - @commission.ancestors.each do |c|
        %a.uik-navigation{:href => commission_path(c.id)}
          = c.name
        &nbsp;→&nbsp;
    %div.navigation-holder
      %a.show-navigation{:href=>"#"}
        = @commission.name
      = link_to "ЦИК", root_path  
      %div.tree-navigation
        %br
    - @commission.subtree.where(:is_uik => false).each do |child|
      %div.tree-node-holder{"id" => child.id, "class" => "depth-#{child.depth}"}
        %div.node-name
          %div.name
            %h3{"id"=>child.id,"data-depth"=>child.depth}
              = child.name
              %a.ico-link.sprite-link{:href=>child.url}
          .clearfix
        - if child.uik_holder
          %div.votings{"data-id"=>child.id, "data-loaded"=>"false", "data-url"=>"/uik/#{child.id}"}  
            %div.loading
              = image_tag('ajax-loader.gif')
- else
  %table.voting-table
    - @commission.children.each do |child|
      %tr
        %td
          %a{:href => commission_path(child.id)}
            = child.name
          - uik = child.protocols.first; uik.votings.each do |vote|
            %td{"title"=>vote.name, :class => (vote_class_uik(uik, vote.voting_dictionary_id))}
              = vote.votes


