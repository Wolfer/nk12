.hero-unit
  %h1 
  %p
    Фильтровать по названию: 
    %input#go-to.xlarge{:name => "search", :size => "30", :type => "text"}  
%div.row
  - @elections.each do |election|
    %h2
      = election.name
    %div.row
      - election.commissions.roots.each do |commission|
        %div.tree-root
          %h4
            = link_to "#{commission.name}", :controller => "home", :action => "show", :id => commission.id  
