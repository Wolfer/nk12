<h1>Listing folders</h1>

<table>
  <tr>
    <th>Commission</th>
    <th>Comment</th>
    <th>Created by</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @folders.each do |folder| %>
  <tr>
    <td><%= folder.commission_id %></td>
    <td><%= folder.comment %></td>
    <td><%= folder.created_by_id %></td>
    <td><%= folder.user_id %></td>
    <td><%= link_to 'Unfold', "/protocols/unfold/#{folder.id}", :method => :post %></td>
    <td><%= link_to 'Edit', edit_folder_path(folder) %></td>
    <td><%= link_to 'Destroy', folder, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

